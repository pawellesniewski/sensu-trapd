{
    "daemon": {
        "log_file":     "sensu-trapd.log",
        "log_level":    "INFO",
        "pid_file":     "sensu-trapd.pid",
        "user":         "nobody",
        "group":        "nogroup",
        "trap_file":    "conf/traps.json"
    },
    "dispatcher": {
        "host":             "localhost",
        "port":             3030,
        "timeout":          5,
        "events_log":       "sensu-trapd-events.log"
    },
    "mibs": {
        "paths": ["conf/mibs"],
        "mibs":  ["CLOUDANT-REG-MIB",
                  "CLOUDANT-PLATFORM-MIB",
                  "CLOUDANT-DBCORE-MIB",
                  "CLOUDANT-LOADBALANCER-MIB",
                  "CLOUDANT-CLOUSEAU-MIB",
                  "CLOUDANT-METRICS-MIB"]
    },
    "snmp": {
        "transport": {
            "listen_address":   "0.0.0.0",
            "listen_port":      1620,
            "udp": {
                "enabled": true
            },
            "tcp": {
                "enabled": true
            }
        },
        "auth": {
            "version2": {
                "enabled":      true,
                "community":    ["public", "private"]
            },
            "version3": {
                "enabled":      true,
                "users": {
                    "test-user": {
                        "authentication": {
                            "protocol": "MD5",
                            "password": "myAuthSecret"
                        },
                        "privacy": {
                            "protocol": "DES",
                            "password": "myPrivSecret"
                        }
                    },
                    "test-user-nopriv": {
                        "authentication": {
                            "protocol": "MD5",
                            "password": "myAuthSecret"
                        },
                        "privacy": {
                            "protocol": "none"
                        }
                    }
                }
            }
        }
    }
}
